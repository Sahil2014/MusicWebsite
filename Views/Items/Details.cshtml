@model MusicWebsite.Models.Item

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<p>
    @*@Html.ActionLink("Edit", "Edit", new { id = Model.Id })*@ |
    @Html.ActionLink("Back to List", "Index")
</p>

<h1>@Model.Title</h1>
<br />
<h3>Play Demo.</h3>
<audio controls controlsList="nodownload">
    <source src=@Model.FilePath type="audio/mpeg">
    Your browser does not support the audio element.
</audio>
<br />
<h3>Price:$@Model.Price</h3>
<br />
<h3>Quantity Available:@Model.Qty</h3>
<div class="row">
    <div class="col-md-3">
        <a href="@Url.Action("Buy", "Carts", new { ItemId = Model.Id })"><div class="btn-success">Add To Cart.</div></a>

    </div>

    <div class="col-md-3 col-md-offset-4">
        <a href="@Url.Action("Index","Items")"><div class="btn-success">Go Back</div></a>
    </div>
</div>
<br />
